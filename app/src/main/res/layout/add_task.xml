<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill all the fields and register" />

    <EditText
        android:id="@+id/taskNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the Task"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/taskDateET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            />

        <ImageButton
            android:id="@+id/btncaldr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:contentDescription="DatePicker"
            app:srcCompat="@drawable/ic_baseline_date_range_24" />
    </LinearLayout>


    <Button
        android:id="@+id/addTaskbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addtask"
        android:text="Add Task" />

    <Button
        android:id="@+id/btnbackAT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showmyPpage4btn"
        android:text="Back" />
    <Button
    android:id="@+id/logoutbtn"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:onClick="logout"
    android:text="Logout" />

</LinearLayout>